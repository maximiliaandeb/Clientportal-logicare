<div class="cp-v2-modal" id="cp-v2-password-modal" aria-hidden="true" role="dialog" aria-labelledby="cp-v2-password-modal-title">
    <div class="cp-v2-modal-inner">
        <div class="cp-v2-modal-header">
            <div>
                <h2 class="cp-v2-modal-title" id="cp-v2-password-modal-title">Wachtwoord wijzigen</h2>
                <div class="cp-v2-modal-meta">Voer een nieuw wachtwoord in</div>
            </div>
            <button type="button" class="cp-v2-modal-close" data-modal-close aria-label="Sluit">Ã—</button>
        </div>

        <div class="cp-v2-modal-body">
            <form id="cp-password-form">
                <div class="cp-v2-modal-form-row">
                    <label class="cp-v2-modal-label" for="cp-password-new">Wachtwoord*</label>
                    <input id="cp-password-new" name="password" type="password" class="cp-v2-modal-input" />
                </div>

                <div class="cp-v2-modal-form-row">
                    <label class="cp-v2-modal-label" for="cp-password-confirm">Wachtwoord bevestigen*</label>
                    <input id="cp-password-confirm" name="password_confirm" type="password" class="cp-v2-modal-input" />
                </div>
            </form>
        </div>

        <div class="cp-v2-modal-footer">
            <button type="button" class="cp-v2-button-secondary" data-modal-close>Annuleren</button>
            <button type="button" class="cp-v2-button-primary" id="cp-password-save-btn">Verzenden</button>
        </div>
    </div>
</div>
